@page "/authentication/{action}"
@layout EmptyLayout
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication

@code {
    [Parameter] public string Action { get; set; }
}

<div class="vh-100 vw-100 d-flex justify-content-center align-items-center">
    <div class="d-flex align-items-center">
        <RemoteAuthenticatorView Action="@Action">
            <LoggingIn>
                <div class="spinner-grow text-muted mr-3" style="width: 3rem; height: 3rem;" role="status">
                    <span class="sr-only">
                        Authenticating..
                    </span>
                </div>

                <p class="m-0 text-muted">Redirecting to sign in..</p>
            </LoggingIn>

            <CompletingLoggingIn>
                <div class="spinner-grow text-muted mr-3" style="width: 3rem; height: 3rem;" role="status">
                    <span class="sr-only">
                        Authenticating..
                    </span>
                </div>

                <p class="m-0 text-muted">Almost ready..</p>
            </CompletingLoggingIn>

            <LogInFailed>
                <div class="text-center">
                    <p class="lead m-0">Login failed</p>
                    <p class="m-0 text-muted">You could not be signed in</p>
                </div>
            </LogInFailed>

            <LogOut>
                <div class="spinner-grow text-muted mr-3" style="width: 3rem; height: 3rem;" role="status">
                    <span class="sr-only">
                        Authenticating..
                    </span>
                </div>

                <p class="m-0 text-muted">Signing out..</p>
            </LogOut>

            <LogOutSucceeded>
                <div class="text-center">
                    <p class="lead m-0">Successfully logged out</p>
                    <p class="m-0 text-muted">You will be redirected shortly</p>
                </div>

                <Redirect Target="/" Delay="TimeSpan.FromSeconds(4)" />
            </LogOutSucceeded>

            <LogOutFailed>
                <!-- todo -->
            </LogOutFailed>
        </RemoteAuthenticatorView>
    </div>
</div>